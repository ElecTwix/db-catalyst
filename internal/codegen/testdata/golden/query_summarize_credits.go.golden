package store

import "context"

const querySummarizeCredits string = `WITH RECURSIVE credit_totals AS (
    SELECT id, credits FROM users
    UNION ALL
    SELECT u.id, u.credits FROM users u JOIN credit_totals c ON u.id > c.id
)
SELECT COUNT(*) AS total_users,
       SUM(credit_totals.credits) AS sum_credits,
       AVG(credit_totals.credits) AS avg_credit
FROM credit_totals;`

// SummarizeCredits aggregates user credits across a recursive rollup.
func (q *Queries) SummarizeCredits(ctx context.Context) (SummarizeCreditsRow, error) {
	row := q.db.QueryRowContext(ctx, querySummarizeCredits)
	if err := row.Err(); err != nil {
		return SummarizeCreditsRow{}, err
	}
	var item SummarizeCreditsRow
	err := row.Scan(&item.TotalUsers, &item.SumCredits, &item.AvgCredit)
	if err != nil {
		return SummarizeCreditsRow{}, err
	}
	return item, nil
}
