package store

import "database/sql"

type GetUserRow struct {
	Id      int32
	Email   *interface{}
	Credits sql.NullFloat64
}

func scanGetUserRow(rows sql.Rows) (GetUserRow, error) {
	var item GetUserRow
	if err := rows.Scan(&item.Id, &item.Email, &item.Credits); err != nil {
		return item, err
	}
	return item, nil
}

