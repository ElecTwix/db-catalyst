package store

import (
	"context"
	"database/sql"
)

type CreateUserParams struct {
	Email   sql.NullString
	Credits sql.NullFloat64
}

const queryCreateUser string = `INSERT INTO users (email, credits) VALUES (?, ?)`

func (q *Queries) CreateUser(ctx context.Context, arg CreateUserParams) (sql.Result, error) {
	return q.db.ExecContext(ctx, queryCreateUser, arg.Email, arg.Credits)
}
