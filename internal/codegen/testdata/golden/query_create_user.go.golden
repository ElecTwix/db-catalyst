package store

import (
	"context"
	"database/sql"
)

type CreateUserParams struct {
	Email   sql.NullString
	Credits sql.NullFloat64
}

const queryCreateUser string = `INSERT INTO users (email, credits) VALUES (?, ?)`

func (q *Queries) CreateUser(ctx context.Context, arg CreateUserParams) error {
	_, err := q.db.ExecContext(ctx, queryCreateUser, arg.Email, arg.Credits)
	return err
}
