package store

import (
	"context"
	"database/sql"
)

const queryUpdateUserCredits string = `UPDATE users SET credits = ? WHERE id = ?`

func (q *Queries) UpdateUserCredits(ctx context.Context, credits sql.NullFloat64, id int32) (sql.Result, error) {
	return q.db.ExecContext(ctx, queryUpdateUserCredits, credits, id)
}
