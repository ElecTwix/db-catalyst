package store

import (
	"context"
	"database/sql"
)

type UpdateUserCreditsParams struct {
	Credits sql.NullFloat64
	Id      int64
}

const queryUpdateUserCredits string = `UPDATE users SET credits = ? WHERE id = ?`

func (q *Queries) UpdateUserCredits(ctx context.Context, arg UpdateUserCreditsParams) error {
	_, err := q.db.ExecContext(ctx, queryUpdateUserCredits, arg.Credits, arg.Id)
	return err
}
